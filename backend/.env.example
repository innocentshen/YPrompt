# YPrompt 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# ==========================================
# 数据库配置
# ==========================================
# 数据库类型: sqlite 或 mysql
DB_TYPE=sqlite

# SQLite 配置（当 DB_TYPE=sqlite 时使用）
SQLITE_DB_PATH=../data/yprompt.db

# MySQL 配置（当 DB_TYPE=mysql 时使用）
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=yprompt

# ==========================================
# JWT 配置
# ==========================================
# JWT 密钥（生产环境必须修改为强随机字符串）
SECRET_KEY=your-super-secret-jwt-key-change-me

# ==========================================
# Linux.do OAuth 配置（可选）
# ==========================================
# 申请地址: https://connect.linux.do
LINUX_DO_CLIENT_ID=
LINUX_DO_CLIENT_SECRET=
LINUX_DO_REDIRECT_URI=http://localhost:5173/auth/callback

# ==========================================
# 默认管理员账号配置
# ==========================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=管理员

# ==========================================
# 应用配置
# ==========================================
# 是否允许本地注册（true/false）
REGISTRATION_ENABLED=false

# 是否启用跨域（true/false）
ENABLE_CORS=true

# 是否启用访问日志（true/false）
ACCESS_LOG=false

# 是否启用调试模式（true/false）
DEBUG=false

# Worker 数量
WORKERS=1

# ==========================================
# Redis 配置（可选）
# ==========================================
REDIS_CON=redis://127.0.0.1:6379/2
